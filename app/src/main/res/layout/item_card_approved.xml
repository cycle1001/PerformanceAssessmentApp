<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/c_white"
    android:padding="@dimen/dimen_10">

    <TextView
        android:id="@+id/tv_list_num"
        style="@style/style_1e_label"
        android:layout_width="match_parent"
        android:layout_weight="12"
        android:textSize="@dimen/text_18"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginEnd="@dimen/dimen_5"
        android:textStyle="bold"
        android:singleLine="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        tools:text="199999"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/lbl_punch_num"
            style="@style/style_8a_label"
            android:text="@string/lbl_punch_num" />

        <TextView
            android:id="@+id/tv_punch_num"
            style="@style/style_1e_label"
            android:layout_toEndOf="@id/lbl_punch_num"
            android:layout_toRightOf="@id/lbl_punch_num"
            tools:text="F00011234567891" />

        <TextView
            android:id="@+id/lbl_punch_name"
            style="@style/style_8a_label"
            android:layout_below="@id/lbl_punch_num"
            android:layout_alignRight="@+id/lbl_punch_num"
            android:layout_marginTop="@dimen/dimen_3"
            android:layout_marginBottom="@dimen/dimen_3"
            android:text="@string/lbl_punch_person" />

        <TextView
            android:id="@+id/tv_punch_name"
            style="@style/style_1e_label"
            android:layout_below="@id/lbl_punch_num"
            android:layout_toRightOf="@id/lbl_punch_name"
            android:layout_toEndOf="@id/lbl_punch_name"
            android:layout_marginTop="@dimen/dimen_3"
            android:layout_marginBottom="@dimen/dimen_3"
            tools:text="张三" />


        <TextView
            android:id="@+id/tv_punch_time"
            style="@style/style_1e_label"
            android:layout_below="@+id/lbl_punch_name"
            android:layout_alignParentRight="true"
            tools:text="2017-12-27 15:30:00" />

    </RelativeLayout>

</LinearLayout>