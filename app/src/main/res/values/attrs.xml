<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="selected_drawable" format="reference" />
    <attr name="selected_color" format="color"/>
    <attr name="border_width" format="dimension"/>
    <attr name="border_color" format="color"/>

    <declare-styleable name="GradientTabImageView">
        <attr name="selected_drawable"/>
    </declare-styleable>

    <declare-styleable name="GradientTabTextView">
        <attr name="selected_color"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width"/>
        <attr name="border_color"/>
    </declare-styleable>

    <declare-styleable name="CustomTitleBar">
        <attr name="left_background" format="reference" />
        <attr name="right_background" format="reference" />
        <attr name="title_text" format="string" />
        <attr name="title_text_size" format="dimension" />
        <attr name="title_text_color" format="color" />
    </declare-styleable>

    <declare-styleable name="MultiStateView">
        <attr name="empty_layout" format="reference" />
        <attr name="retry_layout" format="reference" />
        <attr name="loading_layout" format="reference" />
    </declare-styleable>

</resources>